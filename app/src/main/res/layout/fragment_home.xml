<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription">

    <RelativeLayout
        android:tag="layout/activity_main_0"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/banner1">

            <RelativeLayout
                android:tag="binding_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    layout="@layout/layout_app_bar_main"/>

                <ScrollView
                    android:background="@color/color_voicelist_bg"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:layout_below="@+id/toolbar">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/ll_record"
                            android:background="@drawable/bg_item_selected"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_120sdp"
                            android:layout_margin="@dimen/_20sdp">

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/imgBanner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                app:lottie_autoPlay="true"
                                app:lottie_fileName="mic_circle.json"
                                app:lottie_repeatCount="100"/>

                            <ImageView
                                android:layout_width="@dimen/_85sdp"
                                android:layout_height="@dimen/_85sdp"
                                android:src="@drawable/ic_rerecord"
                                android:layout_centerInParent="true" />
                        </RelativeLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginHorizontal="20dp">

                            <LinearLayout
                                android:baselineAligned="false"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <RelativeLayout
                                    android:orientation="vertical"
                                    android:id="@+id/ll_open_file"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_90sdp"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="10dp">

                                    <ImageView
                                        android:background="@drawable/ic_import_audio_bg"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>

                                    <LinearLayout
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:id="@+id/imgIcon2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_marginHorizontal="@dimen/_5sdp"
                                        android:backgroundTint="#ffeeea">

                                        <TextView
                                            android:textSize="@dimen/_15ssp"
                                            android:textStyle="bold"
                                            android:textColor="@color/white"
                                            android:layout_gravity="center"
                                            android:paddingLeft="@dimen/_2ddp"
                                            android:paddingRight="@dimen/_2ddp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/txt_import"
                                            android:singleLine="true"
                                            android:paddingHorizontal="2dp"/>

                                        <TextView
                                            android:textSize="@dimen/_14ssp"
                                            android:textColor="@color/white"
                                            android:layout_gravity="center"
                                            android:paddingLeft="2dp"
                                            android:paddingRight="2dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/txt_audios"
                                            android:singleLine="true"
                                            android:paddingHorizontal="2dp"/>
                                    </LinearLayout>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:orientation="vertical"
                                    android:id="@+id/rel_ringtone_maker"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_90sdp"
                                    android:layout_weight="1"
                                    android:layout_marginStart="10dp">

                                    <ImageView
                                        android:background="@drawable/ic_ringtones_maker"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>

                                    <LinearLayout
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:id="@+id/imgIcon"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_marginBottom="2dp"
                                        android:layout_marginStart="2dp"
                                        android:layout_marginEnd="2dp"
                                        android:backgroundTint="#fde9f7">

                                        <TextView
                                            android:textSize="@dimen/_15ssp"
                                            android:textStyle="bold"
                                            android:textColor="@color/white"
                                            android:layout_gravity="center"
                                            android:paddingLeft="2dp"
                                            android:paddingRight="2dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/txt_ringtones"
                                            android:singleLine="true"
                                            android:paddingHorizontal="2dp"/>

                                        <TextView
                                            android:textSize="@dimen/_14ssp"
                                            android:textColor="@color/white"
                                            android:layout_gravity="center"
                                            android:paddingLeft="2dp"
                                            android:paddingRight="2dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/txt_maker"
                                            android:singleLine="true"
                                            android:paddingHorizontal="2dp"/>
                                    </LinearLayout>
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:baselineAligned="false"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:weightSum="2"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <RelativeLayout
                                    android:orientation="vertical"
                                    android:id="@+id/ll_text_audio"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_90sdp"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="10dp">

                                    <ImageView
                                        android:background="@drawable/ic_text_to_audio"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>

                                    <LinearLayout
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:id="@+id/imgIcon3"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:backgroundTint="#ffeeea">

                                        <TextView
                                            android:textSize="@dimen/_15ssp"
                                            android:textStyle="bold"
                                            android:textColor="@color/white"
                                            android:layout_gravity="center"
                                            android:paddingLeft="2dp"
                                            android:paddingRight="2dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/text_to"
                                            android:singleLine="true"
                                            android:paddingHorizontal="2dp"/>

                                        <TextView
                                            android:textSize="@dimen/_14ssp"
                                            android:textColor="@color/white"
                                            android:layout_gravity="center"
                                            android:paddingLeft="2dp"
                                            android:paddingRight="2dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/audio"
                                            android:singleLine="true"
                                            android:paddingHorizontal="2dp"/>
                                    </LinearLayout>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:orientation="vertical"
                                    android:id="@+id/ll_my_voice"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_90sdp"
                                    android:layout_weight="1"
                                    android:layout_marginStart="10dp">

                                    <ImageView
                                        android:background="@drawable/ic_saved_audio"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>

                                    <LinearLayout
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:id="@+id/imgIcon1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_marginBottom="2dp"
                                        android:layout_marginStart="2dp"
                                        android:layout_marginEnd="2dp"
                                        android:backgroundTint="#fde9f7">

                                        <TextView
                                            android:textSize="@dimen/_15ssp"
                                            android:textStyle="bold"
                                            android:textColor="@color/white"
                                            android:layout_gravity="center"
                                            android:paddingLeft="2dp"
                                            android:paddingRight="2dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/saved"
                                            android:singleLine="true"
                                            android:paddingHorizontal="2dp"/>

                                        <TextView
                                            android:textSize="@dimen/_14ssp"
                                            android:textColor="@color/white"
                                            android:layout_gravity="center"
                                            android:paddingLeft="2dp"
                                            android:paddingRight="2dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/txt_audios"
                                            android:singleLine="true"
                                            android:paddingHorizontal="2dp"/>
                                    </LinearLayout>
                                </RelativeLayout>
                            </LinearLayout>

                            <TextView
                                android:textSize="@dimen/_15ssp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:text="@string/more_tools"
                                android:singleLine="true"
                                android:paddingHorizontal="2dp"/>

                            <LinearLayout
                                android:baselineAligned="false"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:weightSum="2"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <RelativeLayout
                                    android:id="@+id/trim_audio"
                                    android:background="@drawable/round_corner_extra_features"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_80sdp"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="10dp">

                                    <ImageView
                                        android:layout_width="@dimen/_40sdp"
                                        android:layout_height="@dimen/_40sdp"
                                        android:src="@drawable/ic_trim_audio"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="@dimen/_10sdp"/>

                                    <LinearLayout
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:backgroundTint="#ffeeea">

                                        <TextView
                                            android:textSize="@dimen/_15ssp"
                                            android:textStyle="bold"
                                            android:textColor="@color/black"
                                            android:layout_gravity="center"
                                            android:paddingLeft="2dp"
                                            android:paddingRight="2dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/txt_trim"
                                            android:singleLine="true"
                                            android:paddingHorizontal="2dp"/>

                                        <TextView
                                            android:textSize="@dimen/_14ssp"
                                            android:textColor="@color/black"
                                            android:layout_gravity="center"
                                            android:paddingLeft="2dp"
                                            android:paddingRight="2dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/txt_audios"
                                            android:singleLine="true"
                                            android:paddingHorizontal="2dp"/>
                                    </LinearLayout>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:orientation="vertical"
                                    android:id="@+id/merge_audio"
                                    android:background="@drawable/round_corner_extra_features"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_80sdp"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="10dp">

                                    <ImageView
                                        android:layout_width="@dimen/_40sdp"
                                        android:layout_height="@dimen/_40sdp"
                                        android:src="@drawable/ic_merge_audio"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="@dimen/_10sdp"/>

                                    <LinearLayout
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:backgroundTint="#ffeeea">

                                        <TextView
                                            android:textSize="@dimen/_15ssp"
                                            android:textStyle="bold"
                                            android:textColor="@color/black"
                                            android:layout_gravity="center"
                                            android:paddingLeft="2dp"
                                            android:paddingRight="2dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/txt_merge"
                                            android:singleLine="true"
                                            android:paddingHorizontal="2dp"/>

                                        <TextView
                                            android:textSize="@dimen/_14ssp"
                                            android:textColor="@color/black"
                                            android:layout_gravity="center"
                                            android:paddingLeft="2dp"
                                            android:paddingRight="2dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/txt_audios"
                                            android:singleLine="true"
                                            android:paddingHorizontal="2dp"/>
                                    </LinearLayout>
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:baselineAligned="false"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:weightSum="2"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <RelativeLayout
                                    android:orientation="vertical"
                                    android:id="@+id/my_audio"
                                    android:background="@drawable/round_corner_extra_features"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_80sdp"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="10dp">

                                    <ImageView
                                        android:layout_width="@dimen/_40sdp"
                                        android:layout_height="@dimen/_40sdp"
                                        android:src="@drawable/ic_import_audio"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="@dimen/_10sdp"/>

                                    <LinearLayout
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:backgroundTint="#ffeeea">

                                        <TextView
                                            android:textSize="@dimen/_15ssp"
                                            android:textStyle="bold"
                                            android:textColor="@color/black"
                                            android:layout_gravity="center"
                                            android:paddingLeft="2dp"
                                            android:paddingRight="2dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/txt_my"
                                            android:singleLine="true"
                                            android:paddingHorizontal="2dp"/>

                                        <TextView
                                            android:textSize="@dimen/_14ssp"
                                            android:textColor="@color/black"
                                            android:layout_gravity="center"
                                            android:paddingLeft="2dp"
                                            android:paddingRight="2dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/txt_audios"
                                            android:singleLine="true"
                                            android:paddingHorizontal="2dp"/>
                                    </LinearLayout>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:orientation="vertical"
                                    android:id="@+id/settings"
                                    android:background="@drawable/round_corner_extra_features"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_80sdp"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="10dp">

                                    <ImageView
                                        android:layout_width="@dimen/_40sdp"
                                        android:layout_height="@dimen/_40sdp"
                                        android:src="@drawable/ic_app_language"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="@dimen/_10sdp"/>

                                    <LinearLayout
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:backgroundTint="#ffeeea">

                                        <TextView
                                            android:textSize="@dimen/_15ssp"
                                            android:textStyle="bold"
                                            android:textColor="@color/black"
                                            android:layout_gravity="center"
                                            android:paddingLeft="2dp"
                                            android:paddingRight="2dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/language"
                                            android:singleLine="true"
                                            android:paddingHorizontal="2dp"/>

                                        <TextView
                                            android:textSize="@dimen/_14ssp"
                                            android:textColor="@color/black"
                                            android:layout_gravity="center"
                                            android:paddingLeft="2dp"
                                            android:paddingRight="2dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/txt_audios"
                                            android:singleLine="true"
                                            android:paddingHorizontal="2dp"/>
                                    </LinearLayout>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </RelativeLayout>

            <com.google.android.material.navigation.NavigationView
                android:layout_gravity="start"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:tag="binding_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-1dp">

                    <include
                        android:id="@+id/layout_content"
                        layout="@layout/drawer_layout"/>

                </LinearLayout>
            </com.google.android.material.navigation.NavigationView>
        </androidx.drawerlayout.widget.DrawerLayout>

        <RelativeLayout
            android:gravity="center"
            android:id="@+id/banner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <RelativeLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </RelativeLayout>
</layout>

